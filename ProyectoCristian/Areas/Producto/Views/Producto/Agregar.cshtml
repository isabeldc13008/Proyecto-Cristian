@using ProyectoCristian.Areas.Producto.Models 
@model Productos
    <style>
        .rojito {
            color: #ff0000;
        }
    </style>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Agregar Producto</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->

                    <form asp-area="Producto" asp-controller="Producto" asp-action="Guardar" method="Post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Nombre del producto</label>
                                        <input asp-for="nombre" type="text" class="form-control" id="exampleInputEmail1" placeholder="Nombre">
                                        <span asp-validation-for="descripcion" class="rojito"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Precio</label>
                                        <input asp-for="precio" type="number" class="form-control" id="exampleInputPassword1" placeholder="000">
                                        <span asp-validation-for="descripcion" class="rojito"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="exampleInputFile">Imagen</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input asp-for="Imagen2" type="file" class="custom-file-input" id="exampleInputFile">
                                                <label class="custom-file-label" for="exampleInputFile">Click aqui</label>
                                                <span asp-validation-for="Imagen2" class="rojito"></span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Descripcion</label>
                                        <textarea asp-for="descripcion" class="form-control" rows="3" placeholder="Enter ..." maxlength="300"></textarea>
                                        <span asp-validation-for="descripcion" class="rojito"></span>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Cantidad</label>
                                        <input asp-for="cantidad" type="number" class="form-control" placeholder="000">
                                        <span asp-validation-for="cantidad" class="rojito"></span>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="form-group">

                                        <label>Categoria</label>

                                        <select asp-for="id_categoria" class="form-control select2" style="width: 100%;">
                                            <option selected>Seleccione</option>
                                            @foreach (Categorias c in Model.categoria)
                                            {

                                                <option value="@c.id_categoria">@c.nombre</option>
                                            }
                                        </select>
                                        <span asp-validation-for="descripcion" class="rojito"></span>
                                    </div>
                                </div>
                                <input  type="hidden" asp-for="estado" value="1"/>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>