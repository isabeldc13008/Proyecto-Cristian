@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="my-auto mx-auto xl:ml-20 bg-white xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
    <form id="account" method="post">
        <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
            Inicio de sesion
        </h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="intro-x mt-2 text-gray-500 xl:hidden text-center">El inicio de sesion es obligatorio para poder entrar al sistema</div>
            <div class="intro-x mt-8">
                <input asp-for="Input.Email" class="intro-x login__input input input--lg border border-gray-300 block" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <input asp-for="Input.Password" class="intro-x login__input input input--lg border border-gray-300 block mt-4" placeholder="Contraseña" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">

                <div class="flex items-center mr-auto">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>


                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Te olvidaste de tu contraseña?</a>
                </p>
                <br>
                <p>

                </p>

                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear cuenta</a>
                </p>
            </div>
            <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                <button type="submit" class="button button--lg w-full xl:w-32 text-white bg-theme-1 xl:mr-3">Iniciar</button>

            </div>
        </div>

        <div class="intro-x mt-10 xl:mt-24 text-gray-700 text-center xl:text-left">
            Al registrarse, usted acepta nuestra politica de datos
            <br>
            <a class="text-theme-1" href="">Terminos y condiciones</a> & <a class="text-theme-1" href="">Politica de privacidad</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


